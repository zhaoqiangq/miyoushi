/* pages/details/details.wxss */
page{
  background: #f8f8f8;
  height: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  border-top:1rpx solid #e2e2e2;
}
.msg{
  background: #fff;
  border-radius: 20rpx;
  margin-top: 30rpx;
}
.msg .msgtop{
  width: 100%;
  height: 140rpx;
  background: #99804d;
  border-radius: 20rpx 20rpx 0px 0px;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.msg .msgtop .magimg{
  width: 100rpx;
  height: 100rpx;
  float: left;
  background: #e2e2e2;
  border-radius: 50%;
  text-align: center;
  overflow: hidden;
}
.msg .msgtop .magimg image{
  width: 100%;
}
.msgfont{
  float: left;
  margin-left: 20rpx;
  color: #ffffff;
  font-size: 30rpx;
  line-height: 50rpx;
}
.msgfont text{
  font-size: 26rpx;
  color: rgba(255,255,255,0.5);
}
.intro{
  padding: 50rpx;
  box-sizing: border-box;
  color: #000000;
  font-size:26rpx;
  line-height: 40rpx; 
}
.intro text{
  display: block;
  margin-bottom: 30rpx;
}

.plays{
  font-size: 26rpx;
  color: #999999;
  margin: 50rpx 0;
  padding: 0 25rpx;
  box-sizing: border-box;
}
.plays .play{
  width: 42rpx;
  float: left;
}
.plays .play image{
  width: 22rpx;
}
progress{
  width: 480rpx;
  background: #eee;
  float: left;
  margin-top: 15rpx;
}
.plays text{
  margin-left: 15rpx;
}

.clap{
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}
.clap image{
  width: 120rpx;
  display: block;
  margin: 20rpx auto;
}
.img-box{
  width: 100%;
  height: 100rpx;
  overflow-y: auto;
  margin: 30rpx 0;
  margin-top: 100rpx;
}
.img-list{
  width: 1000rpx;
}
.img-list view{
  width: 70rpx;
  height: 70rpx;
  display: inline-block;
  overflow: hidden;
  background: #eee;
  border-radius:50%;
  margin-right: 18rpx; 
}
.img-list view image{
  width: 100%;
}

.img-title{
  font-size: 22rpx;
  color: #999999;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 50rpx;
}
.img-title image{
  width: 50rpx;
  vertical-align:middle;
  margin-right: 20rpx;
}
audio{
  width: 1rpx;
  height: 0;
  overflow: hidden;
}
.share{
  position: fixed;
  bottom:150rpx;
  right: 0;margin: auto;
}
.share button{
  position: absolute;
  top:0;left: 0;right: 0;bottom:0;
  margin: auto;
  opacity: 0;
}
.share image{
  width: 173rpx;
}