/* pages/wallet/wallet.wxss */
page{
  height: 100%;
  background: #f8f8f8;
}
.content{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.mywallet{
   width: 100%;
   height: 200rpx;
   background: #fff;
   font-size: 30rpx;
   color: #333333;
   text-align: center;
   line-height: 60rpx;
   padding-top: 50rpx;
   box-sizing: border-box;
   margin-bottom: 30rpx;
}
.mywallet text{
  color: #999999;
  font-size: 26rpx;
}
.mywallet text.number{
  font-size: 50rpx;
  color: #333;
}

.title{
  font-size: 26rpx;
  color: #333;
  line-height: 100rpx;
}
.wallet-list label{
  width: 335rpx;
  height: 100rpx;
  background-color: #e2e2e2;
  display:inline-block;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  line-height: 70rpx; 
  margin-top: 20rpx;
  position: relative;
}
.wallet-list label text{
  height: 30rpx;
  font-size: 22rpx;
  color: #999999;
  display: block;
  position: absolute;
  bottom:35rpx;left: 0;right: 0;
  margin: auto
}
.wallet-list label.active{
   background: #99804d;
   color: #fff;
}
.wallet-list label.active text{
  color: #fff;
}
.wallet-list label:nth-child(2n){
  margin-left: 20rpx;
}
.weixin{
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}
.weixin image{
  width: 60rpx;
}
.weixin .weimsg{
  display: inline-block;
  font-size: 30rpx;
  color: #333;
  margin-left: 30rpx;
}
.weixin .weimsg text{
  font-size: 26rpx;
  color: #999;
  display: block;
}
.weixin image.active{
  width: 30rpx;
  float: right;
  margin-top: 30rpx;
}
.text{
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-top: 50rpx;
}
.text text{
  color: #99804d;
}
.button{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background: #99804d;
  position: fixed;
  bottom:0;right: 0;left: 0;
  margin: auto;
  font-size: 30rpx;
}