@import "/common/style/add.wxss";
/* pages/work/work.wxss */
page{
  background: #f8f8f8;
  height: 100%;
}
.content{
  width: 100%;
  height: 100%;
}
.content.active{
   overflow: hidden;
}
.header{
  background: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 30rpx;
}
.header .add{
  color: #999999;
}
.header image{
  width: 31rpx;
  float: right;
  margin-top: 30rpx; 
}
.header text.gg{
  float: right;
  color: #c2c2c2;
  margin: 0 20rpx;
}
.header .msg{
  color: #99804d;
}
.header .title{
  color: #222222;
  margin-left: 20rpx;
}


.advertising{
  position: relative;
}
.advertising>image{
  width: 100%;
}
.advertising .close{
  position: absolute;
  top:0;right: 0;
  margin: auto;
}
.advertising .close image{
  width: 50rpx;
}

.list{
  padding: 0 20rpx;
  box-sizing: border-box;
}
.list .item{
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
}
.list .item::after{
  content: "";
  clear: both;
  display: block;
}
.list .item .item-img{
  float: left;
  position: relative;
}
.list .item .item-img image{
  width: 120rpx;
  float: left;
}
.list .item .item-img .icon{
  width: 36rpx;
  position: absolute;
  right: -18rpx;bottom:0;
  margin: auto;
}
.list .item .item-msg{
  width: 73%;
  float: left;
  color: #999999;
  font-size: 26rpx;
  margin-left: 40rpx;
}
.list .item .item-msg view{
  line-height: 50rpx;
}
.list .item .item-msg view text.span{
  float: right;
  color:#ff4e00;
}
.list .item .item-msg view text.span.color{
  color:#e3e3e3;
}
.list .item .item-msg .h6{
  font-size: 30rpx;
  color: #444;
}
.list .item .item-msg image{
  width: 20rpx;
  margin-right: 10rpx; 
}
.msg .site{
  width: 16rpx;
}
.msg .education{
  width: 150rpx;
  
}
.msg .tiem{
  width: 30rpx;
}
.msg text{
  margin-right: 20rpx;
}

.gl{
  margin: 0 10rpx;
}
