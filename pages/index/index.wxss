/**index.wxss**/
page{
  background: #f8f8f8;
  height: 100%;
}
.content{
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.content swiper{
    width: 100%;
    height:220rpx;

}
.content swiper image{
    width: 100%;
}
.content .audio-list{
  margin-top: 20rpx;
}
.content .audio-item{
  border-bottom: 1px solid #e2e2e2;
  position: relative;
  padding-bottom: 40rpx;
  padding-top:20rpx;
}

.audio-list .audio-item .audio-left{
  width: 22%;
  text-align: center;
  display: inline-block;
}
.audio-list .audio-item .audio-right{
  width: 77%;
  display: inline-block;
}
.audio-right .h6{
  color: #999999;
  font-size: 30rpx;
  line-height: 50rpx;
  display: block;
}
.audio-img{
  width: 100rpx;
  height: 100rpx;
  background: #eee;
  text-align: center;
  border-radius:50%;
  overflow: hidden;
  margin: 0 auto;
}
.audio-img image{
  width: 100%;
}
.audio-left text{
  font-size: 22rpx;
  color: #000000;
}
.audio-right .play{
  width: 42rpx;
  float: left;
}
.audio-right .play image{
  width: 22rpx;
}
progress{
  width: 370rpx;
  background: #eee;
  float: left;
  margin-top: 25rpx;
}
audio{
  /* position: absolute;
  top:20rpx;left: 110rpx;
  margin: auto;
  width: 100rpx;height: 100rpx;
  overflow: hidden;
  opacity: 0;  */
  width: 1rpx;height: 0;
  overflow: hidden;
}
.audio-msg text{
  font-size: 26rpx;
  color: #999;
  margin-left: 20rpx;
  margin-right: 10rpx;
  float: left;
}
.audio-msg .shu{
  width: 26rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
   float: left;
}
.audio-msg{
  line-height: 50rpx;
}
.audio-msg::after{
  content: "";
  clear: both;
  display: block;
}
.applause{
  font-size: 22rpx;
  color: #999999;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}
.applause image{
  width: 33rpx;
  margin-right: 10rpx;
  vertical-align:middle;
}
.applause text{
  margin-right: 10rpx;
}
.loading{
  text-align: center;
}
.loading image{
  width: 50rpx;
  margin-top: 20rpx;
}

.share{
  position: fixed;
  bottom:150rpx;
  right: 0;margin: auto;

}
.share image{
  width: 173rpx;
}
.transmit{
  width: 690rpx;
  height: 98rpx;
  position: fixed;
  bottom:20rpx;
  right: 0;margin: auto;left: 0;
  background: #7f7f7f;
  border-radius: 10rpx;
}

.transmit>view{
  float: left;
}
.transmit .transmit-paly{
  width: 100rpx;
  height: 100%;
  text-align: center;
}
.transmit .transmit-paly .palys{
   width: 100%;
   height: 100%;
   line-height: 98rpx;
}
.transmit .transmit-paly image{
  width: 60rpx;
  vertical-align:middle;
}
.transmit .transmit-msg{
  padding: 15rpx 0;
  box-sizing: border-box;
  line-height: 30rpx;
} 
.transmit .transmit-msg view{
   color: #ffffff;
   font-size: 30rpx;
}
.transmit .transmit-msg text{
  font-size: 22rpx;
  color: #c2c2c2;
}
.transmit .transmit-show{
  width: 100rpx;
  height: 100%;
  line-height: 98rpx;
  text-align: center;
  float: right;
}
.transmit .transmit-show image{
  width: 34rpx;
  vertical-align:middle;
}