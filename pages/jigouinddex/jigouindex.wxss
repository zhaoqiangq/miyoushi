/* pages/jigouinddex/jigouindex.wxss */
page{
  background: #f8f8f8;
}
swiper{
  width: 100%;
  height:340rpx;
}
swiper image{
  width: 100%;
}
.title{
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 30rpx;
  color: #999999;
}
.title image{
  width: 120rpx;
  display: inline-block;
}
.title text{
  display: block;
  line-height: 40rpx;
}
.title view{
  display: inline-block;
  margin-left: 30rpx;
}
.nav{
  height: 100rpx;
  border-top:1rpx solid #e2e2e2;
}
.nav view{
  width: 50%;
  display: inline-block;
  font-size: 30rpx;
  background: #fff;
  line-height: 100rpx;
  text-align: center;
  position: relative;
}
.nav view.active::after{
  display: block;
}
.nav view::after{
  display: none;
  content: "";
  position: absolute;
  bottom:0;left: 0;right: 0;
  margin: auto;
  height: 5rpx;
  background-color: #99804d;
} 

.list{
  padding: 0 20rpx;
  box-sizing: border-box;
}
.list .item{
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
}
.list .item::after{
  content: "";
  clear: both;
  display: block;
}
.list .item .item-img{
  float: left;
  position: relative;
}
.list .item .item-img image{
  width: 120rpx;
  float: left;
}
.list .item .item-img .icon{
  width: 36rpx;
  position: absolute;
  right: -18rpx;bottom:0;
  margin: auto;
}
.list .item .item-msg{
  width: 73%;
  float: left;
  color: #999999;
  font-size: 26rpx;
  margin-left: 40rpx;
}
.list .item .item-msg view{
  line-height: 50rpx;
}
.list .item .item-msg view text.span{
  float: right;
  color:#ff4e00;
}
.list .item .item-msg view text.span.color{
  color:#e3e3e3;
}
.list .item .item-msg .h6{
  font-size: 30rpx;
  color: #444;
}
.list .item .item-msg image{
  width: 20rpx;
  margin-right: 10rpx; 
}
.msg .site{
  width: 16rpx;
}
.msg .education{
  width: 150rpx;
  
}
.msg .tiem{
  width: 30rpx;
}
.msg text{
  margin-right: 20rpx;
}

.gl{
  margin: 0 10rpx;
}

.jianjie{
  font-size: 30rpx;
  background: #fff;
  line-height: 50rpx;
  color: #999;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.jianjie .text{
  font-size: 40rpx;
  color: #222222;
  position: relative;
  display: block;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
}
.jianjie .text::after{
   content: "";
   width: 5rpx;
   height: 30rpx;
   	background-color: #99804d;
   position: absolute;top:0;left: 0;bottom: 0;
   margin: auto;
}