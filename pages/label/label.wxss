/* pages/label/label.wxss */
page{
  background: #f8f8f8;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.list view{
   font-size: 30rpx;
   color: #999999;
   background: #fff;
   border-radius: 10rpx;
   display: inline-block;
   padding: 10rpx 17rpx;
   border: 1rpx solid #e2e2e2;
    margin-top: 20rpx;
    margin-right: 20rpx;
}
.list view.active{
  border: 1rpx solid #99804d;
  background: #99804d;
  color: #fff;
}
.list view image{
  width: 15rpx;
}

.title{
  height: 100rpx;
  position: relative;
}
.title::after{
  content: "";
  position: absolute;
  width: 90%;
  left: 0;right: 0;
  top:0;bottom: 0;
  margin: auto;
  background: #e2e2e2;
  height: 1rpx;
}

.title text{
  width: 150rpx;
  font-size: 26rpx;
  display: block;
  background: #f8f8f8;
  color: #c2c2c2;
  line-height: 100rpx;
  position: absolute;
  top:0;left: 0;right: 0;bottom: 0;
  margin: auto;  
  z-index: 9;
  text-align: center;
}

.shade{
  position: fixed;
  top:0;left: 0;bottom:0;right: 0;
  margin: auto;
  background: rgba(0,0,0,0.5);
  z-index: 11;
}
.shade .inner{
  width: 540rpx;
	height: 283rpx;
	background-color: rgba(255, 255, 255, 0.96);
	border-radius: 26rpx;
  position: absolute;
  top:0;left: 0;bottom:0;right: 0;
  margin: auto;
  font-size: 34rpx;
  color:#222;
  text-align: center;
  padding-top: 30rpx;
  box-sizing: border-box; 
  overflow: hidden;
}
.shade .inner input{
  width: 80%;
  border: 1rpx solid #e2e2e2;
  margin: 0 auto;
  margin-top: 25rpx;
  text-align: left;
}
.shade .inner .button{
  height: 100rpx;
  margin-top: 30rpx;
  font-size: 34rpx;
  color: #007bff;
  line-height: 100rpx;
  border-top: 1rpx solid #e2e2e2;
}
.shade .inner .button view{
  width: 50%;
  box-sizing: border-box;
  float: left;
}
.shade .inner .button view:first-child{
   border-right: 1rpx solid #e2e2e2;
}